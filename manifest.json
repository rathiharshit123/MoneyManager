{
    "name": "Money Manager",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Track all your spendings with this extension",
    "icons": {
        "128": "icon128.png",
        "64": "icon64.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "options_page" : "options.html",

    "background": {
        "scripts" : ["eventpage.js"],
        "persistent": false
    },

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
      ]
}